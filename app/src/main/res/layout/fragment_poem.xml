<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#985b4f"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/item_title_layout" />


        <LinearLayout
            android:id="@+id/content_color"
            android:layout_width="match_parent"
            android:orientation="vertical"

            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp20"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"

                android:src="@drawable/poem_click" />

            <Button
                android:id="@+id/btn_result"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dp10"
                android:layout_gravity="center"
                android:background="@drawable/corner_view"

                android:text="获取结果" />
            <com.allen.library.SuperTextView
                android:id="@+id/tv_poemtype"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                app:sCenterBottomTextColor="@color/colorAccent"
                app:sCenterTopTextString=""
                app:sCenterViewGravity="left_center"
                app:sLeftBottomTextColor="@color/color_ffca00"
                app:sLeftBottomTextString="默认五言,右划改为七言>>"
                app:sLeftIconHeight="40dp"
                app:sLeftIconRes="@drawable/poem_icon"
                app:sLeftIconWidth="40dp"
                app:sLeftTopTextString="请选择诗歌格式"
                app:sLeftTopTextColor="@color/white"
                app:sLeftViewGravity="left_center"
                app:sRightViewType="switchBtn" />
            <TextView
                android:id="@+id/poemShow"
                android:layout_marginTop="@dimen/dp20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:typeface="monospace"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>

</LinearLayout>