<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.code.travellog">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"
        tools:ignore="ProtectedPermissions" />

    <application
        android:name="com.code.travellog.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MyCheckBox">
        <activity android:name="com.code.travellog.ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.code.travellog.core.view.common.CommonActivity" />
        <activity android:name="com.code.travellog.core.view.correct.WorkDetailsActivity" />
        <activity android:name="com.code.travellog.ui.AboutActivity"
            android:theme="@style/AppTheme.MaterialAboutActivity.Light"/>
        <activity android:name="com.code.travellog.ui.UserInfoActivity" />

        <activity
            android:name="com.code.travellog.core.view.course.VideoDetailsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.code.travellog.core.view.live.LiveDetailsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.code.travellog.glide.GlideConfig"
            android:value="GlideModule" />
    </application>


</manifest>